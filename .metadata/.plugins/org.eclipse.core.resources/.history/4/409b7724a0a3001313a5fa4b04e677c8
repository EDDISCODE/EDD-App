#include <iostream>
#include "testUtils.h"
#include "FaceFinder.h"


FaceFinder::FaceFinder() {
	m_cc = CascadeClassifier(m_PATH);
}

FaceFinder::FaceFinder(Mat& img) {
	m_cc = CascadeClassifier(m_PATH);
	m_img = img;
}

FaceFinder::FaceFinder(string imgpath) {
	m_cc = CascadeClassifier(m_PATH);
	setTarget(imgpath);
}

bool FaceFinder::setTarget(string imgpath) {
	m_img = imread(imgpath, 1);
	if(m_img.data)
		return true;
	return false;
}



